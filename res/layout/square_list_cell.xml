<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:id="@+id/lineItem"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content">

	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:orientation="vertical">

		<!-- User icon and name -->
		<LinearLayout android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:orientation="horizontal"
			android:paddingTop="10px">

			<!-- Portrait Icon -->
			<ImageView android:id="@+id/post_user_icon"
				android:layout_width="48dip" android:layout_height="48dip"
				android:layout_alignParentLeft="true" />

			<!-- User Name -->
			<TextView android:id="@+id/post_user_name"
				android:layout_height="wrap_content" android:layout_marginLeft="10dip"
				android:textSize="20sp" android:textColor="#FFFFFF"
				android:layout_width="wrap_content" />
		</LinearLayout>

		<!-- Two image thumb-nails side by side -->
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:orientation="vertical"
			android:layout_alignParentRight="true" android:gravity="center"
			android:paddingTop="20px">

			<TextView android:id="@+id/poll_desc" android:layout_height="wrap_content"
				android:textSize="16sp" android:textColor="#FFFFFF"
				android:layout_width="wrap_content" android:layout_below="@+id/textLine"
				android:paddingTop="10px" android:paddingBottom="10px" />

			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:orientation="horizontal"
				android:layout_alignParentRight="true" android:gravity="center">

				<ImageView android:id="@+id/poll_img1"
					android:layout_width="150dip" android:layout_height="180dip"
					android:layout_alignParentLeft="true" android:paddingLeft="5px"
					android:paddingRight="5px" />
				<ImageView android:id="@+id/poll_img2"
					android:layout_width="150dip" android:layout_height="180dip"
					android:layout_alignParentLeft="true" android:paddingLeft="5px"
					android:paddingRight="5px" />

			</LinearLayout>

		</LinearLayout>

		<!-- The latest comment -->
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:orientation="horizontal"
			android:layout_alignParentRight="true" android:gravity="center"
			android:paddingBottom="10px" android:paddingTop="20px">

			<ImageView android:id="@+id/comment_user_icon"
				android:layout_width="30dip" android:layout_height="30dip"
				android:layout_alignParentLeft="true" />

			<TextView android:id="@+id/comment_user_name"
				android:layout_height="wrap_content" android:layout_marginLeft="10dip"
				android:textSize="14sp" android:textColor="#FFFFFF"
				android:layout_width="wrap_content" android:layout_below="@+id/textLine" />

			<TextView android:id="@+id/comment_content"
				android:layout_height="wrap_content" android:layout_marginLeft="10dip"
				android:textSize="14sp" android:textColor="#FFFFFF"
				android:layout_width="wrap_content" android:layout_below="@+id/textLine" />

			<Button android:id="@+id/more_comment_button" android:gravity="center"
				android:layout_width="wrap_content" android:layout_marginLeft="10px"
				android:layout_alignParentRight="true" android:text="更多"
				android:layout_height="34dp" />

			<!-- <Button android:id="@+id/DbuttonLine" android:gravity="center" android:layout_height="wrap_content" 
				android:layout_width="wrap_content" android:layout_alignParentRight="true" 
				android:text="Details" /> -->
		</LinearLayout>
	</LinearLayout>
</RelativeLayout>
